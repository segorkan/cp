#include <iostream>
#include <vector>
#include <algorithm>
#include <queue>

using namespace std;



int main()
{
	long long n, m, ans = 0;
	cin >> n >> m;
	const long long INF = 1e9;
	vector<vector<long long>> graph(n + 1, vector<long long>(n + 1));
	for (int i = 1; i <= m; i++) {
		int h, h1, h2;
		cin >> h >> h1 >> h2;
		graph[h][h1] = h2; graph[h1][h] = h2;
	}
	vector <long long> dist(n+1, INF);
	vector <bool> used(n + 1, false);
	dist[1] = 0;
	for (int i = 0; i < n; i++)
	{
		long long mini = INF, u;
		for (int j = 0; j < n; j++)
			if (!used[j] && dist[j] < mini)
			{
				mini = dist[j];
				u = j;
			}
		ans += mini;
		used[u] = true;
		for (int v = 0; v < n; v++) {
			dist[v] = min(dist[v], graph[u][v]);
		}
	}
	cout << ans;
}
