/*
Count the number of sequences of 0 and 1 with the length of n where no 3 '1' stand near each other.
*/

#include <iostream>
#include <vector>
 
using namespace std;
 
int main()
{
	int n;
	cin >> n;
	vector <long long> dp(1000);
	dp[1] = 2;
	dp[2] = 4;
	dp[3] = 7;
	for (int i = 4; i <= n; i++) {
		dp[i] = dp[i - 1] + dp[i - 2] + dp[i - 3];
	}
	cout << dp[n];
}
