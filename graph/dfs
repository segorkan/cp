#include <iostream>
#include <vector>
#include <algorithm>

using namespace std;

void dfs(int v, vector <bool>& used, vector<vector<int>>& graph) {
    used[v] = true;
    for (int u : graph[v]) {
        if (!used[u])
            dfs(u, used, graph);
    }
}


int main()
{
    int n, m, count = 0;
    cin >> n >> m;
    vector<vector<int>> graph(n + 1);
    vector <bool> used(n + 1);

    for (int i = 1; i <= m; i++) {
        int h, h1;
        cin >> h >> h1;
        graph[h].push_back(h1);
    }
    for (int i = 1; i <= n; i++) {
        if (!used[i]) {
            dfs(i, used, graph);
            count++;
        }
    }
    cout << count;
}
